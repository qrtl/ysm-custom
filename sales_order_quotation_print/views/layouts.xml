<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="external_layout_header_ysm" inherit_id="report.external_layout_header">
	<xpath expr="//div[@class='header']/div[@class='row']/div[@name='company_address']" position="replace">
		<div class="col-xs-4">
			<div t-field="company.partner_id" t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
			<div t-if="company.partner_id.phone">
				TEL <span t-field="company.partner_id.phone"/>
			</div>
			<div style="border-bottom: 1px solid black;"/>
		</div>
	</xpath>
</template>

<template id="external_layout_footer_ysm" inherit_id="report.external_layout_footer">
	<xpath expr="//div[@class='footer']/div[@class='text-center']" position="replace">
        <div class="text-center" style="border-top: 1px solid black;">
            <ul class="list-inline">
                <li><span class="page"/></li>
                <li>/</li>
                <li><span class="topage"/></li>
            </ul>
        </div>
	</xpath>
</template>
</data>
</openerp>

